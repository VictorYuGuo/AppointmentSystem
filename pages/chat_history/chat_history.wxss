/* pages/chat_history/chat_history.wxss */
.nav_right{  
  position: absolute;   /* 使用绝对定位 */  
  top: 0;         /* 距离上边距：0px */
  width: 100%;     /* 右侧主盒子所占宽度 */
  height: 100%;  /* 右侧主盒子所占高度 */
  padding: 10px;  /* 所有 4 个内边距都是 10px*/
  box-sizing: border-box;  /* 为元素指定的任何内边距和边框都将在已设定的宽度和高度内进行绘制*/
  background: #fff;        /* 右侧主盒子背景颜色 */
}

.nav_right .nav_right_items{  
  display: flex;
  flex-direction: row;  
  align-items: center;
  width: 100%;        /* 每个item设置宽度是100% */  
  height: 150rpx;        /* 每个item设置高度是100rpx */ 
  text-align: left;   /* 设置图片下方的提示文字居中显示 */
  border-bottom: 1px #dedede solid
}  

.nav_right .nav_right_items image{  
  width: 100rpx;         /* 给图片设置宽度 */  
  height: 100rpx;        /* 给图片设置高度 */  
  margin-top: 5rpx;    /* 图片距离上边距15px */  
  border-radius: 40%;  /* 给图片添加圆角边框 */

}  

.nav_right .nav_right_items view{
  display: flex;
  flex-direction: column; 
}

.nav_right .nav_right_items view view{
  display: flex;
  flex-direction: row; 
}

.mTime{
  margin-left: 150px;
  margin-right:0;
  margin-top:8px;
  font-size: 10px;
}

.lastMessage{
  margin-top:8px;
  font-size: 10px;
}