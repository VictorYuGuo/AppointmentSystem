/* pages/doctor_detail/doctorDetail.wxss */
.top {
  width: 100%;
  height: 275rpx;
  background: linear-gradient(#ffffff,#dddddd);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.img-doc {
  width: 130rpx;
  height: 130rpx;
  border: solid #dddddd 3px;
  border-radius: 50%;
}
.type {
  font-size: 12px;
}

.desc {
  width: 100%;
  height: 200rpx;
  /* background: #ff0000; */
  border-bottom: #dddddd 1px solid
}
.desc-title {
  font-weight: 600;
  display: block;
  margin: 20rpx;
}
.desc-content {
  display: block;
  margin: 0 30rpx;
}

.intro {
  width: 100%;
  height: 300rpx;
  /* background: #00ff00; */
  border-bottom: #dddddd 1px solid
}
.intro-title {
  font-weight: 600;
  display: block;
  margin: 20rpx;
}
.intro-content {
  display: block;
  margin: 0 30rpx;
}

.btn-bottom {
  text-align: center;
  width: 100%;
  padding: 0.75em auto;
  background: #d24a58;
  position: absolute;
  bottom: 0;
  color: #ffffff;
}